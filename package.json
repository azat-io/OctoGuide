{
	"name": "octoguide",
	"version": "0.9.0",
	"description": "A friendly bot that helps contributors adhere to best practices for your repository on GitHub. 🗺️",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JoshuaKGoldberg/OctoGuide.git"
	},
	"license": "MIT",
	"author": {
		"name": "Josh Goldberg ✨",
		"email": "npm@joshuakgoldberg.com"
	},
	"type": "module",
	"main": "lib/index.js",
	"bin": "bin/index.js",
	"files": [
		"LICENSE.md",
		"README.md",
		"bin/index.js",
		"lib/",
		"package.json"
	],
	"scripts": {
		"build": "tsc",
		"build:release": "ncc build src/action/index.ts -o dist; node postbuild.js",
		"format": "prettier .",
		"lint": "eslint . --max-warnings 0",
		"lint:knip": "knip",
		"lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --rules sentences-per-line",
		"lint:packages": "pnpm dedupe --check",
		"lint:spelling": "cspell \"**\" \".github/**/*\"",
		"prepare": "husky",
		"test": "vitest",
		"tsc": "tsc"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write"
	},
	"dependencies": {
		"@actions/core": "^1.11.1",
		"@actions/github": "^6.0.0",
		"@github/markdownlint-github": "^0.7.0",
		"@octokit/plugin-rest-endpoint-methods": "^14.0.0",
		"chalk": "^5.4.1",
		"conventional-commit-types": "^3.0.0",
		"conventional-commits-parser": "^6.1.0",
		"is-comment-meaningless": "^0.2.0",
		"lodash": "^4.17.21",
		"markdownlint": "0.33.0",
		"marked": "^15.0.11",
		"octokit": "^4.1.3",
		"octokit-from-auth": "^0.3.1",
		"parse-github-url": "^1.0.3"
	},
	"devDependencies": {
		"@astrojs/starlight": "0.34.1",
		"@eslint-community/eslint-plugin-eslint-comments": "4.5.0",
		"@eslint/js": "9.25.0",
		"@konami-emoji-blast/astro": "0.1.1",
		"@release-it/conventional-changelog": "10.0.0",
		"@types/eslint-plugin-markdown": "2.0.2",
		"@types/lodash": "4.17.16",
		"@types/node": "22.14.0",
		"@types/parse-github-url": "1.0.3",
		"@vercel/ncc": "0.38.3",
		"@vitest/coverage-v8": "3.1.1",
		"@vitest/eslint-plugin": "1.1.38",
		"astro": "5.7.5",
		"console-fail-test": "0.5.0",
		"cspell": "8.19.0",
		"eslint": "9.25.0",
		"eslint-plugin-jsdoc": "50.6.8",
		"eslint-plugin-jsonc": "2.20.0",
		"eslint-plugin-markdown": "5.1.0",
		"eslint-plugin-n": "17.17.0",
		"eslint-plugin-package-json": "0.29.0",
		"eslint-plugin-perfectionist": "4.11.0",
		"eslint-plugin-regexp": "2.7.0",
		"eslint-plugin-yml": "1.17.0",
		"husky": "9.1.7",
		"knip": "5.50.1",
		"konami-emoji-blast": "0.5.9",
		"lint-staged": "15.5.0",
		"markdownlint-cli": "0.44.0",
		"prettier": "3.5.3",
		"prettier-plugin-astro": "0.14.1",
		"prettier-plugin-curly": "0.3.1",
		"prettier-plugin-packagejson": "2.5.10",
		"prettier-plugin-sh": "0.17.2",
		"release-it": "19.0.1",
		"sentences-per-line": "0.3.0",
		"sharp": "0.34.1",
		"starlight-links-validator": "0.16.0",
		"starlight-package-managers": "0.11.0",
		"type-fest": "4.40.0",
		"typescript": "5.8.2",
		"typescript-eslint": "8.31.0",
		"vitest": "3.1.1"
	},
	"packageManager": "pnpm@10.9.0",
	"engines": {
		"node": ">=20.19.0"
	},
	"publishConfig": {
		"provenance": true
	}
}
